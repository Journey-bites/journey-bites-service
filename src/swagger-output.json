{
  "swagger": "2.0",
  "info": {
    "title": "Journey bites API",
    "description": "for the journey bites app",
    "version": "1.0.0"
  },
  "host": "localhost:3005",
  "basePath": "/api/v1",
  "schemes": ["http"],
  "securityDefinitions": {
    "Bearer": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header",
      "description": "JWT Authorization header using the Bearer scheme. Example: \"Authorization: Bearer {token}\""
    }
  },
  "paths": {
    "/": {
      "get": {
        "tags": ["default"],
        "description": "Demo",
        "responses": {
          "200": {
            "description": "Hello World",
            "schema": {
              "type": "object",
              "properties": {
                "errorCode": {
                  "type": "number",
                  "example": 0
                },
                "message": {
                  "type": "string",
                  "example": "Hello World!"
                },
                "data": {}
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/auth/register": {
      "post": {
        "tags": ["Auth"],
        "description": "Register a new user with email, password, and display name.",
        "parameters": [
          {
            "name": "payload",
            "in": "body",
            "description": "User information",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "example": "journey-bites@gmail.com"
                },
                "password": {
                  "type": "string",
                  "example": "test1234"
                },
                "displayName": {
                  "type": "string",
                  "example": "Journey Bites"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "User created successfully",
            "schema": {
              "type": "object",
              "properties": {
                "statusCode": {
                  "type": "number",
                  "example": 0
                },
                "message": {
                  "type": "string",
                  "example": "User created successfully"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "400": {
            "description": "User already exists",
            "schema": {
              "type": "object",
              "properties": {
                "statusCode": {
                  "type": "number",
                  "example": 2002
                },
                "message": {
                  "type": "string",
                  "example": "User already exists"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "schema": {
              "type": "object",
              "properties": {
                "statusCode": {
                  "type": "number",
                  "example": 9999
                },
                "message": {
                  "type": "string",
                  "example": "Error while registering new user"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": ["Auth"],
        "description": "Login with email and password.",
        "parameters": [
          {
            "name": "payload",
            "in": "body",
            "description": "User information",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "example": "journey-bites@gmail.com"
                },
                "password": {
                  "type": "string",
                  "example": "test1234"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Login successful",
            "schema": {
              "type": "object",
              "properties": {
                "statusCode": {
                  "type": "number",
                  "example": 0
                },
                "message": {
                  "type": "string",
                  "example": "User created successfully"
                },
                "data": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string",
                      "example": "6a431b030bfcb67e98ff0eaafbe43c3ed0addc7809cfc946"
                    }
                  }
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "400": {
            "description": "Invalid field",
            "schema": {
              "type": "object",
              "properties": {
                "statusCode": {
                  "type": "number",
                  "example": 1003
                },
                "message": {
                  "type": "string",
                  "example": "Invalid field"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "401": {
            "description": "User not found or wrong password",
            "schema": {
              "type": "object",
              "properties": {
                "statusCode": {
                  "type": "number",
                  "example": 2008
                },
                "message": {
                  "type": "string",
                  "example": "User not found or wrong password"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "schema": {
              "type": "object",
              "properties": {
                "statusCode": {
                  "type": "number",
                  "example": 9999
                },
                "message": {
                  "type": "string",
                  "example": "Error while logging in"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          }
        }
      }
    },
