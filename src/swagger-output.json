                "statusCode": {
                  "type": "number",
                  "example": 9999
                },
                "message": {
                  "type": "string",
                  "example": "Error while verifying email"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          }
        },
        "security": [
          {
            "Bearer": []
          }
        ]
