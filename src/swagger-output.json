            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "password": {
                  "type": "string",
                  "example": "test5678"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Email is available",
            "schema": {
